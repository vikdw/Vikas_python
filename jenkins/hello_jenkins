pipeline {
    agent any
environment {
  commit_msg = ""
}

    stages {
        stage('Hello') {
            steps {
                echo 'Hello World'
                echo "${GIT_COMMIT}"
                echo "${env.commit_msg}"
                env.commit_msg = sh(script: 'git log -1 --pretty=%B', returnStdout: true).trim()
            }
        }
    stage('Print ENV Values') {
            steps {
                echo "${env.commit_msg}"
            }
        }

    }
}
