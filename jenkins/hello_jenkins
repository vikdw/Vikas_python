
def commit_msg = ""
 
pipeline {
    agent any
environment {
  commit_envmsg = "${commit_msg}"
}
    stages {
        stage('Hello') {
            steps {
                echo 'Hello World'
                echo "${GIT_COMMIT}"
                echo "${env.commit_msg}"
                script{
                def commitMessage = sh(script: 'git log -1 --pretty=%B', returnStdout: true).trim()
                echo "${commitMessage}"
                commit_msg = "${commitMessage}"
                      }
            }
        }
    stage('Print ENV Values') {
            steps {
                echo "${commit_msg}"
                echo "${commit_envmsg}"
            }
        }

    }
}
